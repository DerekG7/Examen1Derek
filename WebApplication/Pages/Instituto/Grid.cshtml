@page
@model WebApplication.Pages.Instituto.GridModel
@{
}

<div class="container">
    <div class="card">
        <div class="card-header">
            Instituto
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Codigo</th>
                                <th>Nombre</th>
                                <th>Telefono</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.Id_Institucion</td>
                                <td>@item.Codigo</td>
                                <td>@item.Nombre</td>
                                <td>@item.Telefono</td>
                                <td>@(item.Estado?"Activo":"Inactivo")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Id_Institucion">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-primary"
                                            onclick="InstitutoGrid.OnClickEliminar(@item.Id_Institucion)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>

                            }

                        </tbody>
                    </table>


                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts{
    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
   
    <script defer src="~/App/Instituto/Grid.js"></script>

}

